<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222">

    <!-- Header with back button and restaurant name -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#333333">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left_solid"
            android:layout_centerVertical="true"
            android:tint="#FF5722"/>

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/backButton"
            android:text="Restaurant Name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Restaurant Image -->
            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <!-- Restaurant Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_dot_solid"
                        android:tint="#FF5722"/>

                    <TextView
                        android:id="@+id/restaurantAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Address, City"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/getDirections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Direction"
                        android:textColor="#FF5722"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Opening Hours -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock_solid"
                        android:tint="#FF5722"/>

                    <TextView
                        android:id="@+id/restaurantHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="10:00 AM - 9:00 PM Daily"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Menu Button -->
                <LinearLayout
                    android:id="@+id/menuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/utensils_solid"
                        android:tint="#FF5722"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Show Menu"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Description Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/restaurantDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant description goes here :3c"
                    android:textColor="#B3B3B3"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/readMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More..."
                    android:textColor="#FF5722"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp"/>

                <!-- Date, Time and Guests Selector -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Date Selector -->
                    <LinearLayout
                        android:id="@+id/dateSelector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/customborder"
                        android:backgroundTint="#333333"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/calendar_solid"
                            android:tint="#FF5722"/>

                        <TextView
                            android:id="@+id/selectedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="12/11/2025"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/chevron_down_solid"
                            android:tint="@android:color/white"/>
                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <!-- Time Selector -->
                    <LinearLayout
                        android:id="@+id/timeSelector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/customborder"
                        android:backgroundTint="#333333"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/clock_solid"
                            android:tint="#FF5722"/>

                        <TextView
                            android:id="@+id/selectedTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="12:15"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/chevron_down_solid"
                            android:tint="@android:color/white"/>
                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <!-- Guests Selector -->
                    <LinearLayout
                        android:id="@+id/guestsSelector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/customborder"
                        android:backgroundTint="#333333"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/users_solid"
                            android:tint="#FF5722"/>

                        <TextView
                            android:id="@+id/selectedGuests"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/chevron_down_solid"
                            android:tint="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Make Reservation Button -->
    <Button
        android:id="@+id/makeReservationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/customborder"
        android:backgroundTint="#FF5722"
        android:text="Make Reservation"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>